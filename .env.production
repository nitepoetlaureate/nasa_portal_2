# NASA System 7 Portal - Production Environment Configuration
# This file contains sensitive information and should not be committed to version control

# ===== Database Configuration =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nasa_system7_prod
DB_USER=nasa_prod_user
DB_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION
DB_SSL_MODE=require
DB_CONNECTION_TIMEOUT=30000
DB_MAX_CONNECTIONS=20

# ===== Redis Configuration =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION
REDIS_DB=0
REDIS_CONNECTION_TIMEOUT=10000
REDIS_MAX_RETRIES=3

# ===== Application Configuration =====
NODE_ENV=production
PORT=3001
LOG_LEVEL=info
ENABLE_METRICS=true
TRUST_PROXY=true

# ===== Security Configuration =====
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION_MINIMUM_32_CHARACTERS
JWT_EXPIRES_IN=24h
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_IN_PRODUCTION
BCRYPT_ROUNDS=12

# ===== NASA API Configuration =====
NASA_API_KEY=YOUR_NASA_API_KEY_HERE
JPL_API_KEY=YOUR_JPL_API_KEY_HERE
NASA_API_BASE_URL=https://api.nasa.gov
NASA_API_RATE_LIMIT=1000

# ===== NASA OAuth/SSO Configuration =====
NASA_OAUTH_AUTH_URL=https://auth.nasa.gov/oauth/authorize
NASA_OAUTH_TOKEN_URL=https://auth.nasa.gov/oauth/token
NASA_OAUTH_PROFILE_URL=https://auth.nasa.gov/oauth/profile
NASA_SSO_ISSUER=https://sso.nasa.gov
NASA_CLIENT_ID=YOUR_NASA_CLIENT_ID
NASA_CLIENT_SECRET=YOUR_NASA_CLIENT_SECRET

# ===== SSL/TLS Configuration =====
SSL_CERT_PATH=/etc/ssl/certs/nasa-system7.crt
SSL_KEY_PATH=/etc/ssl/private/nasa-system7.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# ===== Docker Registry Configuration =====
DOCKER_REGISTRY=ghcr.io/your-organization
BUILD_VERSION=1.0.0
IMAGE_TAG=latest

# ===== Monitoring Configuration =====
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD
METRICS_ENABLED=true
METRICS_INTERVAL=15000

# ===== Backup Configuration =====
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_STORAGE_PATH=/opt/nasa_system7/backups
BACKUP_COMPRESSION=true

# ===== Email/Notification Configuration =====
SMTP_HOST=smtp.nasa.gov
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=nasa-system7@nasa.gov
SMTP_PASSWORD=CHANGE_THIS_SMTP_PASSWORD
ALERT_EMAIL=alerts@nasa-system7.example.com
NOTIFICATION_EMAIL=admin@nasa-system7.example.com

# ===== Slack Integration =====
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ===== External URLs =====
FRONTEND_URL=https://nasa-system7.example.com
BACKEND_URL=https://api.nasa-system7.example.com
MONITORING_URL=https://monitoring.nasa-system7.example.com

# ===== Performance Configuration =====
CACHE_TTL=3600
REQUEST_TIMEOUT=30000
MAX_FILE_SIZE=10485760
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ===== Analytics Configuration =====
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
ANALYTICS_ENABLED=true
GDPR_COMPLIANCE=true

# ===== Development/Debug Configuration =====
DEBUG=false
ENABLE_CORS=false
ENABLE_SWAGGER=false
ENABLE_PROFILER=false