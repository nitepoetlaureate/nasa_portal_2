# NASA System 7 Portal Analytics Configuration
# Copy this file to .env and customize for your environment

# Analytics Database Configuration
ANALYTICS_DB_HOST=localhost
ANALYTICS_DB_PORT=5432
ANALYTICS_DB_NAME=nasa_system7_analytics
ANALYTICS_DB_USER=postgres
ANALYTICS_DB_PASSWORD=secure_analytics_password_2024

# Analytics Service Configuration
ANALYTICS_SERVICE_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_BATCH_TIMEOUT=5000
ANALYTICS_RETENTION_DAYS=365

# Privacy and Security Configuration
ANALYTICS_SALT=nasa_system7_analytics_salt_2024
ANALYTICS_ENCRYPTION_KEY=your_32_character_encryption_key_here
ANALYTICS_CONSENT_COOKIE_DOMAIN=localhost
ANALYTICS_CONSENT_COOKIE_EXPIRY=365

# Rate Limiting Configuration
ANALYTICS_RATE_LIMIT_WINDOW_MS=60000
ANALYTICS_RATE_LIMIT_MAX_REQUESTS=100

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_MONITORING_INTERVAL=30000
MEMORY_WARNING_THRESHOLD_MB=500

# GDPR/CCPA Compliance
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true
DATA_ANONYMIZATION_ENABLED=true
AUTOMATIC_DATA_DELETION=true

# API Configuration
NASA_API_TRACKING_ENABLED=true
API_PERFORMANCE_TRACKING=true
CACHE_HIT_TRACKING=true

# Real-time Analytics
REAL_TIME_ANALYTICS_ENABLED=true
WEBSOCKET_ANALYTICS_ENABLED=true
LIVE_DASHBOARD_REFRESH_RATE=1000

# Data Export Configuration
DATA_EXPORT_ENABLED=true
DATA_EXPORT_FORMATS=json,csv,pdf
DATA_EXPORT_MAX_RECORDS=100000

# Dashboard Configuration
DASHBOARD_CACHE_DURATION=60000
DASHBOARD_TIME_RANGES=1d,7d,30d,90d,1y
DASHBOARD_REFRESH_INTERVAL=60000

# Error Tracking
ERROR_TRACKING_ENABLED=true
ERROR_NOTIFICATION_ENABLED=true
ERROR_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Development Environment
NODE_ENV=development
ANALYTICS_DEBUG=false
ANALYTICS_LOG_LEVEL=info

# Production Overrides (uncomment for production)
# NODE_ENV=production
# ANALYTICS_DEBUG=false
# ANALYTICS_LOG_LEVEL=warn
# ENABLE_PERFORMANCE_MONITORING=true
# REAL_TIME_ANALYTICS_ENABLED=true
# GDPR_COMPLIANCE_ENABLED=true
# CCPA_COMPLIANCE_ENABLED=true