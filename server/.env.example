# ===== Application Settings =====
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# ===== Database Configuration =====
DB_DATABASE=nasa_system7
DB_USER=nasa_system7_user
DB_PASSWORD=your_secure_database_password_here
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://nasa_system7_user:your_secure_database_password_here@localhost:5432/nasa_system7

# ===== Redis Cache Configuration =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://localhost:6379

# ===== External API Keys =====
# Get your NASA API key from: https://api.nasa.gov/
# Using DEMO_KEY for development - get your own key for production
NASA_API_KEY=DEMO_KEY
JPL_API_KEY=your_jpl_api_key_here

# ===== Security Settings =====
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_minimum_32_characters_long

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== Performance Settings =====
DISABLE_DATABASE_CONNECTIONS=false
COMPRESSION_THRESHOLD=1024

# ===== Monitoring and Debugging =====
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_QUERY_LOGGING=false
ENABLE_AUDIT_LOG=true

# ===== Development Settings =====
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true
ENABLE_ERROR_STACK_TRACES=true