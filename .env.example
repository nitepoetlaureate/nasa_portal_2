# NASA System 7 Portal - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===== Database Configuration =====
DB_NAME=nasa_system7
DB_USER=nasa_user
DB_PASSWORD=your_secure_database_password_here
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ===== Redis Configuration =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ===== Application Configuration =====
NODE_ENV=production
PORT=3001
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_32_characters_long
JWT_REFRESH_SECRET=your_very_secure_jwt_refresh_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_key_here
SESSION_TIMEOUT=86400000

# Multi-Factor Authentication
REQUIRE_MFA=false

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REDIRECT_URI=https://nasa-system7.example.com/auth/google/callback

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_REDIRECT_URI=https://nasa-system7.example.com/auth/github/callback

# NASA SSO Configuration
NASA_CLIENT_ID=your_nasa_sso_client_id
NASA_CLIENT_SECRET=your_nasa_sso_client_secret
NASA_REDIRECT_URI=https://nasa-system7.example.com/auth/nasa/callback
NASA_OAUTH_AUTH_URL=https://auth.nasa.gov/oauth2/authorize
NASA_OAUTH_TOKEN_URL=https://auth.nasa.gov/oauth2/token
NASA_OAUTH_PROFILE_URL=https://api.nasa.gov/user/profile
NASA_SSO_ISSUER=https://sso.nasa.gov

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=https://nasa-system7.example.com
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# Real-time Streaming Configuration
ENABLE_REAL_TIME_STREAMING=true
ENABLE_PUB_SUB=true
NASA_STREAM_APOD_INTERVAL=86400000
NASA_STREAM_NEO_INTERVAL=3600000
NASA_STREAM_DONKI_INTERVAL=300000
NASA_STREAM_ISS_INTERVAL=30000
NASA_STREAM_EPIC_INTERVAL=36000000

# Instance Configuration (for multi-instance deployments)
INSTANCE_ID=instance_1
CLUSTER_MODE=false
DOMAIN=nasa-system7.example.com

# ===== NASA API Configuration =====
NASA_API_KEY=your_nasa_api_key_here
NASA_API_URL=https://api.nasa.gov

# ===== JPL API Configuration =====
JPL_API_KEY=your_jpl_api_key_here
JPL_API_URL=https://ssd-api.jpl.nasa.gov

# ===== SSL/TLS Configuration =====
SSL_CERT_PATH=/etc/ssl/certs/nasa-system7.crt
SSL_KEY_PATH=/etc/ssl/certs/nasa-system7.key
SSL_CA_PATH=/etc/ssl/certs/nasa-system7-ca.crt

# ===== Monitoring Configuration =====
GRAFANA_PASSWORD=your_secure_grafana_password
PROMETHEUS_RETENTION=30d
PROMETHEUS_STORAGE_SIZE=10GB

# ===== Logging Configuration =====
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=100m
LOG_MAX_FILES=5

# ===== Performance Configuration =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_CONNECTIONS=200
NODE_OPTIONS=--max_old_space_size=1024
UV_THREADPOOL_SIZE=8

# ===== Security Configuration =====
CORS_ORIGIN=https://nasa-system7.example.com
ENABLE_CORS=false
ENABLE_SWAGGER=false
ENABLE_METRICS=true
TRUST_PROXY=true

# ===== Docker Registry Configuration =====
DOCKER_REGISTRY=ghcr.io
BUILD_VERSION=latest

# ===== Backup Configuration =====
BACKUP_RETENTION_DAYS=7
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# ===== Email Configuration (for alerts) =====
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@nasa-system7.example.com
SMTP_PASSWORD=your_smtp_password
ALERT_EMAIL=admin@nasa-system7.example.com

# ===== Development Only (remove in production) =====
# DEV_MODE=true
# DEBUG=*