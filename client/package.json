{
  "name": "nasa-system7-client",
  "version": "1.0.0",
  "description": "React frontend for the NASA System 7 Portal - Authentic System 7 interface with NASA data visualization",
  "private": true,
  "dependencies": {
    "axios": "^1.6.0",
    "d3": "^7.8.5",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tanstack/react-query": "^5.0.0",
    "react-router-dom": "^6.20.1",
    "web-vitals": "^2.1.4",
    "lodash": "^4.17.21",
    "react-intersection-observer": "^9.5.3",
    "react-window": "^1.8.8",
    "react-virtualized-auto-sizer": "^1.0.20"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest --coverage --watch=false --run",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "analyze": "npm run build && npx vite-bundle-analyzer dist"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@cypress/vite-dev-server": "^5.0.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "cypress": "^15.5.0",
    "eslint": "^8.54.0",
    "eslint-config-react": "^1.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^23.0.0",
    "msw": "^2.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^1.0.0",
    "whatwg-fetch": "^3.6.0"
  },
  "keywords": [
    "react",
    "nasa",
    "system7",
    "retro",
    "space",
    "astronomy",
    "education",
    "d3",
    "visualization"
  ],
  "author": "NASA System 7 Portal Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "proxy": "http://localhost:3001"
}
